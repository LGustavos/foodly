{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="../receitas.css">
    <title>Receitas | Foodly</title>
{% endblock %}

{% block menu %}
    <div class="menu">
        <img src="../logo.png" alt="Foodly">
        <a href="/home">In√≠cio</a>
        <a href="/sobre">Sobre</a>
        <a href="#">Receitas</a>
    </div>
{% endblock %}

{% block content %}

    <section class="cards_receitas">
        {% for item in items %}
            <div class="card">
                <div class="card_image_container">
                    <img src="{{item.image}}" alt="Imagem de {{ item.title }}">
                </div>
                <div class="card_content">
                    <p>{{ item.title }}</p>
                </div>
                <div class="autor_receita">
                    <p>{{ item.author }}</p>
                </div>
            </div>
        {% endfor %}
    </section>

    <script>
        const cards = document.querySelectorAll('.card');

        for (let i = 0; i < cards.length; i++) {
            cards[i].addEventListener("click", function () {
                window.location.href = `/detalhes/${i}`
            })
        }
    </script>

{% endblock %}